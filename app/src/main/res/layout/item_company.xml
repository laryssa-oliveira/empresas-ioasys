<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageCompany"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@color/softGreen"
            app:layout_constraintTop_toTopof="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="0dp"
            app:layout_constraintEnd_toEndOf="0dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textCompanyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/colorNavBar"
            app:layout_constraintStart_toEndof="@id/imageCompany"
            app:layout_constraintTop_toTopof="@id/imageCompany"
            app:layout_constraintBottom_toBottomOf="0dp"
            app:layout_constraintEnd_toEndOf="0dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textCompanyRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:fontFamily="sans-serif"
            android:textStyle="italic"
            android:textSize="14sp"
            android:textColor="@color/warmGrey"
            app:layout_constraintStart_toEndof="@id/textCompanyName"
            app:layout_constraintTop_toTopof="@id/textCompanyName"
            app:layout_constraintBottom_toBottomOf="0dp"
            app:layout_constraintEnd_toEndOf="0dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textCompanyCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:fontFamily="sans-serif"
            android:textSize="14sp"
            android:textColor="@color/warmGrey"
            app:layout_constraintStart_toEndof="@id/textCompanyRole"
            app:layout_constraintTop_toBottomof="@id/textCompanyRole"
            app:layout_constraintBottom_toBottomOf="@id/imageCompany"
            app:layout_constraintEnd_toEndOf="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>